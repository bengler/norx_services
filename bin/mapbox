#!/usr/bin/env python

import mapnik
import sys, getopt

def main(argv):
  inputfile = ''
  outputfile = ''
  try:
    opts, args = getopt.getopt(argv,"hi:o:",["ifile=","ofile="])
  except getopt.GetoptError:
    print 'mapbox.py -i <inputfile> -o <outputfile>'
    sys.exit(2)
  for opt, arg in opts:
    if opt == '-h':
      print 'mapbox.py -i <inputfile> -o <outputfile>'
      sys.exit()
    elif opt in ("-i", "--ifile"):
      inputfile = arg
    elif opt in ("-o", "--ofile"):
      outputfile = arg

  map = mapnik.Map(3134, 3134)
  mapnik.load_map(map, inputfile)
  bbox = mapnik.Box2d(mapnik.Coord(432000, 6790000), mapnik.Coord(492000, 6850000))
  map.zoom_to_box(bbox)
  mapnik.render_to_file(map, outputfile)

if __name__ == "__main__":
   main(sys.argv[1:])
