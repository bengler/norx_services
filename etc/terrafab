### BEGIN INIT INFO
# Provides:          terrafab
# Required-Start:    $local_fs $remote_fs
# Required-Stop:     $local_fs $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      S 0 1 6
# Short-Description: terrafab initscript
# Description:       terrafab
### END INIT INFO

PROG="terrafab"
PROG_PATH="/home/kartverk/kartverk_vm_services/terrafab"
USER="kartverk"
SCRIPT_NAME="/etc/init.d/terrafab"
PID_PATH="/var/run/"

case "$1" in
  start)
  if [ -e "$PID_PATH/$PROG.pid" ]; then
      ## Program is running, exit with error.
      echo "Error! $PROG is currently running!" 1>&2
      exit 1
  else
    if [ ! -d "$PROG_PATH/log" ]; then
      sudo -u $USER mkdir "$PROG_PATH/log"
    fi
    if [ ! -e "$PROG_PATH/log/$PROG.log" ]; then
      sudo -u $USER touch $PROG_PATH/log/$PROG.log
    fi
    su -l $USER -c "cd /home/kartverk/kartverk_vm_services/terrafab && node /home/kartverk/kartverk_vm_services/terrafab/server.js > $PROG_PATH/log/$PROG.log 2>&1 &"
    echo "$PROG started"
    ps aux | awk '/terrafab\/server.js/ {print $2}' | head -1 > "$PID_PATH/$PROG.pid"
    exit 0
  fi
  ;;
  stop)
  if [ -e "$PID_PATH/$PROG.pid" ]; then
    cat "$PID_PATH/$PROG.pid" | xargs kill -9
    rm "$PID_PATH/$PROG.pid"
    echo "$PROG stopped"
  else
    ## Program is not running, exit with error.
    echo "Error! $PROG not started!" 1>&2
    exit 1
  fi
  ;;
  restart)
  $0 stop
  $0 start
  ;;
  *)
  echo "Usage: $SCRIPT_NAME {start|stop|restart}" >&2
  exit 3
  ;;
esac

:
